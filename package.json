{
  "name": "lazy-tv",
  "description": "Big Picture TV Mode",
  "author": "Kees Kluskens <kees@webduck.nl>",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "src/electron-starter.js",
  "devDependencies": {
    "concurrently": "^3.4.0",
    "cross-env": "^4.0.0",
    "electron": "^1.6.2",
    "electron-builder": "^16.6.0",
    "eslint": "^3.18.0",
    "eslint-config-codeyellow": "^4.0.0",
    "react-cy-scripts": "0.10.1",
    "wait-on": "^2.0.2"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "csv-parse": "^1.2.0",
    "lodash": "^4.17.4",
    "mobx": "^3.1.7",
    "mobx-react": "^4.1.3",
    "moment": "^2.18.1",
    "normalize.css": "^6.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-keydown": "^1.6.9",
    "react-test-renderer": "^15.4.2",
    "rimraf": "^2.6.1",
    "scrollto-with-animation": "^4.5.2",
    "styled-components": "^1.4.4"
  },
  "build": {
    "appId": "nl.webduck.lazy-tv",
    "asarUnpack": ["public/*.exe"],
    "compression": "store",
    "mac": {
      "category": "public.app-category.productivity"
    }
  },
  "scripts": {
    "start": "concurrently \"yarn browser-start\" \"wait-on http://localhost:3000/ && yarn electron-start\"",
    "build": "yarn run browser-build && build",
    "browser-build": "rimraf browser-build && react-cy-scripts build && mv build browser-build",
    "test": "react-cy-scripts test --env=jsdom",
    "electron-start": "cross-env ELECTRON_START_URL=http://localhost:3000 electron .",
    "electron": "electron .",
    "browser-start": "cross-env BROWSER=none react-cy-scripts start"
  }
}
