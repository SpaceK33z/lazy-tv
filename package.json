{
  "name": "lazy-tv",
  "description": "Big Picture TV Mode",
  "author": "Kees Kluskens <kees@webduck.nl>",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "src/electron-starter.js",
  "devDependencies": {
    "cross-env": "^4.0.0",
    "electron": "^1.6.5",
    "electron-builder": "^17.0.3",
    "eslint": "^3.19.0",
    "eslint-config-codeyellow": "^4.0.0",
    "npm-run-all": "^4.0.2",
    "react-cy-scripts": "0.10.2",
    "wait-on": "^2.0.2"
  },
  "dependencies": {
    "axios": "^0.16.1",
    "csv-parse": "^1.2.0",
    "lodash": "^4.17.4",
    "mobx": "^3.1.9",
    "mobx-react": "^4.1.8",
    "moment": "^2.18.1",
    "normalize.css": "^6.0.0",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-image-crop": "^2.0.3",
    "react-notification": "^6.6.1",
    "react-sortable-hoc": "^0.6.2",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1",
    "scrollto-with-animation": "^4.5.2",
    "styled-components": "^2.0.0-15",
    "uuid": "^3.0.1"
  },
  "build": {
    "appId": "nl.webduck.lazy-tv",
    "asarUnpack": [
      "public/*.exe"
    ],
    "compression": "store",
    "mac": {
      "icon": "images/icon.icns"
    },
    "win": {
      "icon": "images/icon.ico"
    }
  },
  "scripts": {
    "start": "run-p browser-start electron-start-wait",
    "build": "yarn run browser-build && build",
    "browser-build": "rimraf browser-build && react-cy-scripts build && mv build browser-build",
    "test": "react-cy-scripts test --env=jsdom",
    "electron-start": "cross-env ELECTRON_START_URL=http://localhost:3000 electron .",
    "electron": "electron .",
    "browser-start": "cross-env BROWSER=none react-cy-scripts start",
    "electron-start-wait": "wait-on http://localhost:3000/ && yarn electron-start"
  }
}
